@model List<Libro>

<div class="col-3">
    @foreach (Libro libro in Model) 
    {
    <div class="card mb-3 m-2 text-center">
        <div class="card-header">
            <h5 class="card-title">@libro.Titulo</h5>
        </div>
        <div class="row justify-content-center">
            <img src="~/images/@libro.Portada" class="card-img-top card-img py-4" alt="nombreImagen" style="width: 50%" />
        </div>
        <div class="card-body">
            <a asp-controller="Libros"
               asp-action="Details"
               asp-route-idlibro="@libro.IdLibro"
               class="btn btn-dark">
                Detalle
            </a>
        </div>
    </div>
    }
</div>